[PHP]
short_open_tag=off
detect_unicode=off
max_execution_time = 900
memory_limit = 4G
upload_max_filesize = 256M
post_max_size = 256M
display_errors=on
;error_reporting=E_ALL
error_reporting=E_ALL ^ E_DEPRECATED
max_input_vars = 100000
mysqli.default_socket = {{ brew_install_path }}/var/run/mysql/57/mysqld.sock
pdo_mysql.default_socket = {{ brew_install_path }}/var/run/mysql/57/mysqld.sock
sendmail_path = {{ brew_install_path }}/bin/fake_sendmail.sh
display_startup_errors = on
log_errors = on
error_log = {{ brew_install_path }}/var/log/php/{{ php_version_num }}/error.log


[Date]
date.timezone=UTC
