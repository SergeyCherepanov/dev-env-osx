[program:php72-fpm]
command={{ brew_install_path }}/opt/{{ php_version }}/sbin/php-fpm --nodaemonize --fpm-config {{ brew_install_path }}/etc/php/{{ php_version_num }}/php-fpm.conf
directory={{ brew_install_path }}/opt/{{ php_version }}
stdout_logfile={{ brew_install_path }}/var/log/supervisor/php72.log
stderr_logfile={{ brew_install_path }}/var/log/supervisor/php72.err
user={{ www_user }}
autorestart=true
stopasgroup=true

[program:php72-fpm-xdebug]
command={{ brew_install_path }}/opt/{{ php_version }}/sbin/php-fpm --nodaemonize --fpm-config {{ brew_install_path }}/etc/php/{{ php_version_num }}/php-fpm-xdebug.conf -c {{ brew_install_path }}/etc/php/{{ php_version_num }}/php-xdebug.ini
directory={{ brew_install_path }}/opt/{{ php_version }}
stdout_logfile={{ brew_install_path }}/var/log/supervisor/php72-xdebug.log
stderr_logfile={{ brew_install_path }}/var/log/supervisor/php72-xdebug.err
user={{ www_user }}
autorestart=true
stopasgroup=true

[group:php72]
programs=php72-fpm,php72-fpm-xdebug
