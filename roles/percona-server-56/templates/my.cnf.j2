[client]
port               = 3306
socket             = {{ mysql56_run_dir }}/mysqld.sock

[mysqld_safe]
socket             = {{ mysql56_run_dir }}/mysqld.sock
nice               = 0

[mysqld]
user               = {{ www_user }}
pid-file           = {{ mysql56_run_dir }}/mysqld.pid
socket             = {{ mysql56_run_dir }}/mysqld.sock
port               = 3306
basedir            = {{ homebrew_install_path }}
datadir            = {{ mysql56_data_dir }}/lib/mysql/56
tmpdir             = /tmp/mysql56
lc-messages-dir    = {{ mysql56_cellar }}/share/mysql/56

explicit_defaults_for_timestamp = 1
bind-address                    = 127.0.0.1

# * Fine Tuning
max_allowed_packet    = 512M
thread_stack          = 192K
thread_cache_size     = 8
interactive_timeout   = 300
wait_timeout          = 900
sort_buffer_size      = 16M
read_rnd_buffer_size  = 16M
read_buffer_size      = 16M
join_buffer_size      = 16M
key_buffer_size       = 256M
tmp_table_size        = 256M
max_heap_table_size   = 256M
query_cache_limit     = 16M
query_cache_size      = 64M
query_cache_type      = ON
log_error             = {{ mysql56_log_dir }}/error.log
expire_logs_days      = 7

innodb_file_per_table           = 1
innodb_thread_concurrency       = 8
innodb_lock_wait_timeout        = 300
innodb_flush_method             = O_DIRECT
innodb_log_files_in_group       = 2
innodb_log_file_size            = 256M # if changing, stop database, remove old log files, then start!
innodb_log_buffer_size          = 16M
#innodb_flush_log_at_trx_commit = 2
innodb_flush_log_at_trx_commit  = 0
innodb_buffer_pool_size         = 1G
innodb_buffer_pool_instances    = 8

lower_case_table_names=2
table_open_cache=250

[mysqldump]
quick
quote-names
max_allowed_packet = 16M
